{% extends 'base.html.twig' %}

{% block title %}Liste des sessions {% endblock %}

{% block body %}
    {# Pour changer la couleur de la navbar et montrer sur quel page je suis #}
    <style>
        .homeNav, .internNav, .categoryNav{color : black;}
        .sesionNav{color: #006eff;}
    </style>
    <h3>Liste des sessions : </h3>
    <button><a href="{{path('new_session')}}">Cr√©er une session</a></button>

    <table class="table table-stripped">
        <tbody>
            {% if sessions |length >=1 %}
                {% for session in sessions %}
                    <tr>
                        <td> {{session.nameSession}} </td>
                        <td> <a href="{{ path('edit_session', {'id': session.id}) }}" class="black"> <i class="fa-solid fa-pen-to-square"></i></a></td>
                        <td> <a href="{{ path('delete_session', {'id': session.id}) }}" class="black"><i class="fa-solid fa-trash"></i></a> </td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td>Aucune session</td>
                </tr>
            {% endif %}
        </tbody>
    </table>
{% endblock %}
