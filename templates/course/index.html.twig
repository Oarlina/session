{% extends 'base.html.twig' %}

{% block title %}Hello ModulesController!{% endblock %}

{% block body %}
    {# Pour changer la couleur de la navbar et montrer sur quel page je suis #}
    <style>
        .homeNav, .sesionNav, .internNav, .categoryNav{color : black;}
        .courseNav{color: #006eff;}
    </style>

    <a href="{{ path('new_course') }}"><button>Cr√©er un module</button></a>

    <table class="table table-striped">
        <tbody>
            {% if courses %}
                {% for course in courses %}
                    <tr>
                        <td>{{course.nameCourse}}</td>
                        <td> <a href="{{ path('edit_course', {'id': course.id}) }}" class="black"> <i class="fa-solid fa-pen-to-square"></i></a></td>
                        <td> <a href="{{ path('delete_course', {'id': course.id}) }}" class="black"><i class="fa-solid fa-trash"></i></a> </td>
                    </tr>
                {% endfor %}    
            {% else %}
                <tr>
                    <td>Aucun module</td>
                </tr>
            {% endif %}
        </tbody>
    </table>

{% endblock %}
